<winui:Window
    x:Class="Arqanum.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:winui="using:Microsoft.UI.Xaml"
    Title="Arqanum Messenger">

    <Grid x:Name="RootGrid">

        <Frame x:Name="MainFrame"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch" />

        <Popup x:Name="ImagePopup"
               IsOpen="False"
               IsLightDismissEnabled="False">

            <Grid Background="#CC000000" x:Name="PopupRoot">
                <Image x:Name="PopupImage"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="800"
                    MaxHeight="800"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="16" Spacing="8">
                    <Button Width="40" Height="40"
                        Click="SaveImageButton_Click"
                        Background="#66000000"
                        BorderThickness="0"
                        CornerRadius="20"
                        ToolTipService.ToolTip="Save image">
                        <FontIcon Glyph="&#xE896;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White"/>
                    </Button>

                    <Button Width="40" Height="40"
                        Click="CloseImageButton_Click"
                        Background="#66000000"
                        BorderThickness="0"
                        CornerRadius="20"
                        ToolTipService.ToolTip="Close">
                        <FontIcon Glyph="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>

        </Popup>
    </Grid>
</winui:Window>
